<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<!-- ORACLE 11G -->
	<persistence-unit name="academicoPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>jdbc/academicoDS</non-jta-data-source>
	
		<class>br.com.iasc.seguranca.Entidades.Usuario</class>
		<class>br.com.iasc.seguranca.Entidades.TipoAcesso</class>
		<class>br.com.iasc.seguranca.Entidades.Modulo</class>
		
		
		<class>br.com.iasc.academico.Entidades.Aluno</class>
		<class>br.com.iasc.academico.Entidades.Pais</class>
		<class>br.com.iasc.academico.Entidades.Estado</class>
		<class>br.com.iasc.academico.Entidades.AlunoCobranca</class>
		<class>br.com.iasc.academico.Entidades.Curso</class>
	
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.autocommit" value="false" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="validate" /> -->
			<property name="hibernate.jdbc.batch_size" value="50" />
			<property name="javax.persistence.query.timeout" value="1000" />
			<property name="hibernate.transaction.flush_before_completion"
				value="true" />
			<property name = "hibernate.listeners.envers.autoRegister" value = "false" />
		</properties>
		
	</persistence-unit>

</persistence>
